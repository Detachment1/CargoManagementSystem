                    <Storyboard x:Key="OutOrderStoryBoard">
                        <DoubleAnimation Duration="0:0:0.2" To="0" Storyboard.TargetName="tt" Storyboard.TargetProperty="Y"/>
                    </Storyboard>
                    <Storyboard x:Key="InOrderStoryBoard">
                        <DoubleAnimation Duration="0:0:0.2" To="600" Storyboard.TargetName="tt" Storyboard.TargetProperty="Y"/>
                    </Storyboard>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <UserControl.Triggers>
        <EventTrigger RoutedEvent="Button.Click" SourceName="OutOrderButton">
            <BeginStoryboard Storyboard="{StaticResource OutOrderStoryBoard}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="Button.Click" SourceName="InOrderButton">
            <BeginStoryboard Storyboard="{StaticResource InOrderStoryBoard}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="Button.Click" SourceName="DeleteOrderCollectionButton">
